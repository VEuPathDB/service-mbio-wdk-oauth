
# Root directory for runtime bind mounts
DATA_STORAGE_ROOT_DIR=

# Password for your oauth-keys.pkcs12 keystore file
OAUTH_SIGNING_KEY_STORE_PW=

# The four following secrets, keys and tokens must be a sufficient length.  
# Use project_home/OAuth2Server/bin/createHmacSecretValue.sh to generate them

# OAuth Client Secrets 
WDK_OAUTH_CLIENT_SECRET=
SERVICE_OAUTH_CLIENT_SECRET=

# Password for admin endpoints
ADMIN_AUTH_TOKEN=

# WDK secret key (any value; used as a salt in some value generation)
WDK_SECRET_KEY=

#### POSTGRES-SPECIFIC VALUES ####

POSTGRES_ROOT_USER=
POSTGRES_ROOT_PASSWORD=

# Login/password combinations to connect to databases (WDK/EDA)
APP_DB_LOGIN=$POSTGRES_ROOT_USER
APP_DB_PASSWORD=$POSTGRES_ROOT_PASSWORD

USER_DB_LOGIN=$POSTGRES_ROOT_USER
USER_DB_PASSWORD=$POSTGRES_ROOT_PASSWORD

# Login/password combination to connect to account DB (OAuth (logins), EDA (dataset access))
ACCT_DB_LOGIN=$POSTGRES_ROOT_USER
ACCT_DB_PASSWORD=$POSTGRES_ROOT_PASSWORD

# User dataset schema suffix and password of the associated user (VDI)
DB_CONNECTION_PASS_MICROBIOME=$POSTGRES_ROOT_PASSWORD
